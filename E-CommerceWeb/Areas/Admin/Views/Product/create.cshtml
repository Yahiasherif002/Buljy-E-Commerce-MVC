@model Buljy.Models.Product
@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-action="Create" asp-controller="product" class="row">
    <div class="border p-3 mt-4">

        <div class="row pb-2">
            <h2 class="text-primary"><strong>Create Product </strong></h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly"></div>

        <div class=" form-floating py-2 col-12 ">
            <input asp-for="Title" class="form-control border-0 shadow" />
            <label for="Title" class="ms-2">Book Title</label>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        
        <div class=" form-floating py-2 col-12 mt-2">
            <input asp-for="Author" class="form-control border-0 shadow" />
            <label for="Author" class="ms-2">Author</label>
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        <div class=" form-floating py-2 col-12 mt-2">
            <input asp-for="Description" class="form-control border-0 shadow " />
            <label for="Description" class="ms-2">Description</label>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class=" form-floating py-2 col-12 mt-2">
            <input asp-for="ISBN" class="form-control border-0 shadow " />
            <label for="ISBN" class="ms-2">ISBN</label>
            <span asp-validation-for="ISBN" hidden class="text-danger"></span>

        <div class=" form-floating py-2 col-12 mt-2">
            <div class="row">

                <div class=" form-floating py-2 col-3 mt-2">
                    <input asp-for="Price" class="form-control border-0 shadow " />
                    <label for="Price" class="ms-2">Price</label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class=" form-floating py-2 col-3 mt-2">
                    <input asp-for="ListPrice" class="form-control border-0 shadow " />
                    <label for="ListPrice" class="ms-2">List Price</label>
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>

                <div class=" form-floating py-2 col-3 mt-2">
                    <input asp-for="Price50" class="form-control border-0 shadow " />
                    <label for="Price50" class="ms-2">Price fot 50+</label>
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class=" form-floating py-2 col-3 mt-2">
                    <input asp-for="Price100" class="form-control border-0 shadow " />
                    <label for="Price100" class="ms-2">Price for 100+</label>
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>

            </div>


        </div>
        


        <div class="row mt-4">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>

            <div class="col-6 col-md-3 text-end">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">Back</a>
            </div>
        </div>

    </div>


</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}