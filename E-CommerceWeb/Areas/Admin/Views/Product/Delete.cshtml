@model Product
@{
    ViewData["Title"] = "Delete Product";
}

<div class="container-fluid px-4 py-5">
    <div class="modern-form">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <i class="bi bi-trash3 text-danger fs-1"></i>
                    <h3 class="mt-3">Delete Product</h3>
                    <p class="text-muted">Are you sure you want to delete this product?</p>
                </div>

                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="product-details p-4 rounded-3 mb-4">
                            <div class="d-flex align-items-center mb-4">
                                <img src="@Model.ImageUrl" class="product-image me-4" style="width: 100px; height: 100px; object-fit: cover; border-radius: 8px;" />
                                <div>
                                    <h4 class="mb-1">@Model.Title</h4>
                                    <p class="text-muted mb-0">by @Model.Author</p>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="text-muted mb-2">ISBN</label>
                                <p class="mb-0">@Model.ISBN</p>
                            </div>

                            <div class="mb-3">
                                <label class="text-muted mb-2">Price</label>
                                <p class="mb-0">$@Model.Price</p>
                            </div>

                            <div class="mb-0">
                                <label class="text-muted mb-2">Description</label>
                                <p class="mb-0">@Html.Raw(Model.Description)</p>
                            </div>
                        </div>

                        <form method="post" class="text-center">
                            <input type="hidden" asp-for="Id" />
                            <div class="d-flex gap-3 justify-content-center">
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash3 me-2"></i>Delete
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-2"></i>Back to List
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .product-details {
        background-color: var(--input-bg);
        border: 1px solid var(--border-color);
    }
</style>