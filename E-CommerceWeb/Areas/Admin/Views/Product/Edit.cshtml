@model Product
@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-action="Edit" asp-controller="product" class="row">
    <div class="border p-3 mt-4">

        <div class="row pb-2">
            <h2 class="text-primary"><strong>Edit Product </strong></h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly"></div>

        <div class=" mb-3 row ">
            <label for="Title" class="form-label">Book Title</label>
            <input asp-for="Title" class="form-control border-0 shadow" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3 row">
            <label for="Author" class="form-label">Author</label>
            <input asp-for="Author" class="form-control border-0 shadow" />
           
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        <div class="mb-3 row">
            <label for="Description" class="form-label">Description</label>
            <input asp-for="Description" class="form-control border-0 shadow " />
            
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3 row">
            <label for="ISBN" class="form-label">ISBN</label>
            <input asp-for="ISBN" class="form-control border-0 shadow " />
           
            <span asp-validation-for="ISBN" hidden class="text-danger"></span>

            <div class=" mb-3 row">
                <div class="row">

                    <div class=" form-floating py-2 col-3 mt-2">
                        <label for="Price" class="form-label">Price</label>
                        <input asp-for="Price" class="form-control border-0 shadow " />
                        
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class=" form-floating py-2 col-3 mt-2">
                        <label for="ListPrice" class="form-label">List Price</label>
                        <input asp-for="ListPrice" class="form-control border-0 shadow " />
                        
                        <span asp-validation-for="ListPrice" class="text-danger"></span>
                    </div>

                    <div class=" form-floating py-2 col-3 mt-2">
                        <label for="Price50" class="form-label">Price fot 50+</label>
                        <input asp-for="Price50" class="form-control border-0 shadow " />
                        
                        <span asp-validation-for="Price50" class="text-danger"></span>
                    </div>
                    <div class=" form-floating py-2 col-3 mt-2">
                        <label for="Price100" class="form-label">Price for 100+</label>
                        <input asp-for="Price100" class="form-control border-0 shadow " />
                        
                        <span asp-validation-for="Price50" class="text-danger"></span>
                    </div>

                </div>


            </div>



            <div class="row mt-4">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Update</button>
                </div>

                <div class="col-6 col-md-3 text-end">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">Back</a>
                </div>
            </div>

        </div>
    </div>


</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}