@model List<Category>

@{
    ViewData["Title"] = "Index";
}



<div class="Container">
    <div class= "row pt-4"> 
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle">Create New Category</i>
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped mt-5 ">
        <thead>
            <tr class="table-dark">
                <th class ="text-center">@Html.DisplayNameFor(model => model.First().Name)</th>

                <th class="text-center">@Html.DisplayNameFor(model => model.First().DisplayOrder)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.OrderBy(o=>o.DisplayOrder))
            {
                <tr>
                    <td class ="text-center">@Html.DisplayFor(m => category.Name)</td>
                   
                   
                    <td class="text-center">@Html.DisplayFor(m => category.DisplayOrder)</td>

                    <td class="text-center">
                        <div class="w-75 btn-group" role="Group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                   
                </tr>
            }
        </tbody>
    </table>
</div>

