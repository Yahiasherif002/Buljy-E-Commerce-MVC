@model Category
@{
    ViewData["Title"] = "Create Category";
}

<div class="container-fluid px-4 py-5">
    <div class="modern-form">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <i class="bi bi-grid-3x3-gap fs-1 text-primary"></i>
                    <h3 class="mt-3">Create Category</h3>
                    <p class="text-muted">Add a new category to organize your products</p>
                </div>

                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <form method="post" class="needs-validation" novalidate>
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4 p-3 rounded-3"></div>

                            <div class="mb-4">
                                <label asp-for="Name" class="form-label">
                                    <i class="bi bi-tag me-2"></i>Category Name
                                </label>
                                <input asp-for="Name" class="form-control" placeholder="Enter category name">
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="DisplayOrder" class="form-label">
                                    <i class="bi bi-sort-numeric-down me-2"></i>Display Order
                                </label>
                                <input asp-for="DisplayOrder" class="form-control" placeholder="Enter display order">
                                <span asp-validation-for="DisplayOrder" class="text-danger small"></span>
                            </div>

                            <div class="d-flex gap-3 justify-content-center">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-lg me-2"></i>Create
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-2"></i>Back to List
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}