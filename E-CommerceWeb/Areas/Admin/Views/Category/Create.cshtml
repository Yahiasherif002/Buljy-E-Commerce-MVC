@model Buljy.Models.Category
@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-action="Create" class="row">
    <div class="border p-3 mt-4">

        <div class="row pb-2">
            <h2 class="text-primary"><strong>Create Category</strong></h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class=" form-floating py-2 col-12 ">
            <input asp-for="Name" class="form-control border-0 shadow" />
            <label for="Name" class="ms-2">Category Name</label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class=" form-floating py-2 col-12 mt-2">
            <input asp-for="DisplayOrder" class="form-control border-0 shadow " />
            <label for="DisplayOrder" class="ms-2">Display Order</label>
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <div class="row mt-4">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>

            <div class="col-6 col-md-3 text-end">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">Back</a>
            </div>
        </div>

    </div>


</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}