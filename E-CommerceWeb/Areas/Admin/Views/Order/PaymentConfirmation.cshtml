@model int
@{
    ViewData["Title"] = "Payment Confirmation";
    var estimatedDelivery = DateTime.Now.AddDays(3).ToString("dddd, MMMM dd");
}

<div class="container py-5" x-data="{ darkMode: false }">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-5">
                    <!-- Success Animation -->
                    <div class="text-center mb-4">
                        <div class="success-animation">
                            <i class="bi bi-check-circle-fill text-success display-1"></i>
                        </div>
                        <h1 class="h3 mt-4">Thank You, your payment is received !</h1>
                        <p class="text-muted">Order #@Model has been successfully paid</p>
                    </div>

                   
                    <!-- Order Status -->
                    <div class="order-status mb-4">
                        <div class="d-flex justify-content-between status-steps">
                            <div class="status-step active">
                                <div class="step-icon">
                                    <i class="bi bi-check-circle-fill"></i>
                                </div>
                                <div class="step-label">Order Placed</div>
                            </div>
                            <div class="status-step">
                                <div class="step-icon">
                                    <i class="bi bi-box-seam"></i>
                                </div>
                                <div class="step-label">Processing</div>
                            </div>
                            <div class="status-step">
                                <div class="step-icon">
                                    <i class="bi bi-truck"></i>
                                </div>
                                <div class="step-label">Shipping</div>
                            </div>
                            <div class="status-step">
                                <div class="step-icon">
                                    <i class="bi bi-house-door"></i>
                                </div>
                                <div class="step-label">Delivered</div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-center gap-3 mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                            <i class="bi bi-house-door me-2"></i>Return Home
                        </a>
                        <button class="btn btn-primary" onclick="window.print()">
                            <i class="bi bi-printer me-2"></i>Print Receipt
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Success Animation */
        .success-animation {
            animation: scaleUp 0.5s ease-in-out;
        }


        /* Delivery Banner */
        .delivery-banner {
            background-color: rgba(13, 202, 240, 0.1);
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .delivery-banner .icon-container {
                width: 48px;
                height: 48px;
                background-color: rgba(13, 202, 240, 0.2);
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                color: #0dcaf0;
                margin-right: 1rem;
            }

        /* Progress Bar Animation */
        .progress-animated {
            animation: progressFill 2s ease-in-out forwards;
        }



        /* Order Status Steps */
        .status-steps {
            position: relative;
            padding: 0 1rem;
        }

            .status-steps::before {
                content: '';
                position: absolute;
                top: 24px;
                left: 50px;
                right: 50px;
                height: 2px;
                background-color: #dee2e6;
                z-index: 0;
            }

        .status-step {
            text-align: center;
            position: relative;
            z-index: 1;
        }

        .step-icon {
            width: 48px;
            height: 48px;
            background-color: #f8f9fa;
            border: 2px solid #dee2e6;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 0.5rem;
            transition: all 0.3s ease;
        }

        .status-step.active .step-icon {
            background-color: #198754;
            border-color: #198754;
            color: white;
        }

        .step-label {
            font-size: 0.875rem;
            color: #6c757d;
        }

        /* Dark Mode Styles */
        [data-bs-theme="dark"] {
            --bs-body-bg: #121212;
            --bs-body-color: #e0e0e0;
        }

            [data-bs-theme="dark"] .card {
                background-color: #1e1e1e;
                border-color: #2d2d2d;
            }

            [data-bs-theme="dark"] .delivery-banner {
                background-color: rgba(13, 202, 240, 0.05);
                border: 1px solid rgba(13, 202, 240, 0.1);
            }

                [data-bs-theme="dark"] .delivery-banner .icon-container {
                    background-color: rgba(13, 202, 240, 0.1);
                    color: #5dceea;
                }

            [data-bs-theme="dark"] .status-steps::before {
                background-color: #2d2d2d;
            }

            [data-bs-theme="dark"] .step-icon {
                background-color: #1e1e1e;
                border-color: #2d2d2d;
            }

            [data-bs-theme="dark"] .status-step.active .step-icon {
                background-color: #198754;
                border-color: #198754;
            }

            [data-bs-theme="dark"] .step-label {
                color: #a0a0a0;
            }

    </style>
}