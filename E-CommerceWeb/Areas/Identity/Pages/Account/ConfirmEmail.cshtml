@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm Email";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="identity-card">
                <div class="text-center mb-4">
                    <i class="bi bi-patch-check fs-1 text-primary"></i>
                    <h2 class="mt-3">Email Confirmed</h2>
                    <p class="text-muted">Your email has been successfully confirmed</p>
                </div>

                <div class="text-center">
                    <div class="mb-4">
                        <i class="bi bi-check-circle text-success" style="font-size: 3rem;"></i>
                    </div>
                    <p class="mb-4">Thank you for confirming your email. You can now access all features of your account.</p>
                    <a asp-page="./Login" class="btn btn-primary btn-lg">
                        Proceed to Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>