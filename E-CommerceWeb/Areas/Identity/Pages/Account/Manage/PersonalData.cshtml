@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="mb-4">@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-8">
        <p class="text-muted mb-4">Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>

        <div class="d-flex gap-3">
            <form id="download-data" asp-page="DownloadPersonalData" method="post">
                <button class="btn btn-primary" type="submit">
                    <i class="bi bi-download me-2"></i>Download
                </button>
            </form>

            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">
                <i class="bi bi-trash me-2"></i>Delete
            </a>
        </div>
    </div>
</div>