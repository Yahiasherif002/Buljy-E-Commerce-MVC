@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Password reset email sent";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="bi bi-envelope-check text-primary fs-1"></i>
                        <h2 class="mt-3 mb-4">@ViewData["Title"]</h2>
                    </div>

                    <div class="text-center">
                        <p class="mb-4">Please check your email to reset your password.</p>
                        <a asp-page="./Login" class="btn btn-primary">
                            <i class="bi bi-arrow-left me-2"></i>Return to Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>