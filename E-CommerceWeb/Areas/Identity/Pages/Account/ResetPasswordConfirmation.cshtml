@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Password reset successful";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="bi bi-check-circle text-success fs-1"></i>
                        <h2 class="mt-3 mb-4">@ViewData["Title"]</h2>
                        <p class="mb-4">Your password has been reset successfully.</p>

                        <a asp-page="./Login" class="btn btn-primary">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>