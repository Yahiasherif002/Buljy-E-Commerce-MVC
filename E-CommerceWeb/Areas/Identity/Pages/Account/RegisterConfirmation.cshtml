@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Registration Confirmation";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="identity-card">
                <div class="text-center mb-4">
                    <i class="bi bi-envelope-check fs-1 text-primary"></i>
                    <h2 class="mt-3">Registration Successful</h2>
                    <p class="text-muted">Please check your email to confirm your account</p>
                </div>

                @{
                    if (@Model.DisplayConfirmAccountLink)
                    {
                        <div class="alert alert-info text-center mb-4">
                            <p class="mb-0">
                                <strong>Email confirmation link:</strong>
                                <a class="text-decoration-none" id="confirm-link" href="@Model.EmailConfirmationUrl">Click here</a>
                            </p>
                        </div>
                    }
                }

                <div class="text-center">
                    <p class="mb-0">
                        <a asp-page="./Login" class="text-decoration-none">Back to login</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>