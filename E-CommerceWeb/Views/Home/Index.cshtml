@model LandingPageVM
@{
    ViewData["Title"] = "Welcome to Bulky Books";
    Layout = "_LandingLayout";

    var categoryIcons = new Dictionary<string, string> {
        { "Fiction", "bi-book" },
        { "Non-Fiction", "bi-journal-text" },
        { "Science", "bi-atom" },
        { "Technology", "bi-laptop" },
        { "Business", "bi-briefcase" },
        { "Art", "bi-palette" },
        { "History", "bi-hourglass" },
        { "Biography", "bi-person-badge" },
        { "Children", "bi-stars" },
        { "Cooking", "bi-cup-hot" }
    };
}


<section class="hero-section position-relative overflow-hidden">
    <div class="hero-bg-pattern position-absolute w-100 h-100"></div>
    <div class="container position-relative py-5">
        <div class="row align-items-center min-vh-75">
            <div class="col-lg-6 hero-content text-center text-lg-start">
                <span class="badge bg-primary-subtle text-primary mb-3 px-3 py-2">
                    <i class="bi bi-stars me-1"></i>Welcome to Bulky Books
                </span>
                <h1 class="hero-title display-4 fw-bold mb-4">
                    Discover Your Next
                    <span class="text-gradient">Reading Adventure</span>
                </h1>
                <p class="hero-subtitle lead mb-4">
                    Explore our vast collection of books, from bestsellers to rare finds.
                    Start your reading journey today with our carefully curated selections.
                </p>
                <div class="d-flex gap-3 justify-content-center justify-content-lg-start">
                    <a href="#categories" class="btn btn-primary btn-lg">
                        <i class="bi bi-book me-2"></i>Browse Categories
                    </a>
                    <a href="/Customer/Home" class="btn btn-outline-dark btn-lg">
                        <i class="bi bi-shop me-2"></i>Visit Store
                    </a>
                </div>
                <div class="mt-4 d-flex gap-4 justify-content-center justify-content-lg-start">
                    <div class="text-start">
                        <div class="h4 mb-0"><i class="bi bi-book text-primary me-2"></i>10k+</div>
                        <small class="text-muted">Books Available</small>
                    </div>
                    <div class="text-start">
                        <div class="h4 mb-0"><i class="bi bi-people text-primary me-2"></i>50k+</div>
                        <small class="text-muted">Happy Readers</small>
                    </div>
                    <div class="text-start">
                        <div class="h4 mb-0"><i class="bi bi-star text-primary me-2"></i>4.8</div>
                        <small class="text-muted">User Rating</small>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block">
                <div class="position-relative">
                    <div class="hero-image-container">
                        <img src="https://icons.iconarchive.com/icons/iconarchive/fairy-tale/128/Hero-Magic-Book-icon.png" width="128" height="128" alt="Featured Books" class="img-fluid floating-animation">
                    </div>
                   
                </div>
            </div>
        </div>
    </div>
</section>

<section id="categories" class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-3">Explore Categories</h2>
            <p class="text-muted">Find your perfect read from our diverse collection of books</p>
        </div>

        <div class="row g-4">
            @foreach (var category in Model.Categories)
            {
                var iconClass = categoryIcons.TryGetValue(category.Name, out var icon) ? icon : "bi-book-half";
                <div class="col-md-6 col-lg-4">
                    <div class="category-card h-100">
                        <div class="category-icon-wrapper mb-4">
                            <i class="bi @iconClass"></i>
                        </div>
                        <h3 class="h4 mb-3">@category.Name</h3>
                        <p class="text-muted mb-4">Discover amazing books in our @category.Name collection</p>
                        <a href="/Customer/Home/Category/@category.Id" class="btn btn-outline-primary">
                            <i class="bi bi-arrow-right me-2"></i>Browse @category.Name
                        </a>
                        <div class="category-card-decoration"></div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section id="features" class="features-section py-5 bg-light">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-truck"></i>
                    </div>
                    <h3 class="h5">Fast Delivery</h3>
                    <p class="text-muted">Get your books delivered right to your doorstep</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-arrow-repeat"></i>
                    </div>
                    <h3 class="h5">Easy Returns</h3>
                    <p class="text-muted">30-day hassle-free return policy</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <h3 class="h5">Secure Shopping</h3>
                    <p class="text-muted">100% secure payment processing</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="newsletter-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="newsletter-card text-center">
                    <h2 class="h3 mb-4">Stay Updated</h2>
                    <p class="text-muted mb-4">Subscribe to our newsletter for the latest books and exclusive offers</p>
                    <form class="newsletter-form">
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="Enter your email">
                            <button class="btn btn-primary" type="submit">Subscribe</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
