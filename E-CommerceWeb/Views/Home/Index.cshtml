@model LandingPageVM
@{
    ViewData["Title"] = "Welcome to Bulky Books";
    Layout = "_LandingLayout";

    var categoryIcons = new Dictionary<string, string> {
        { "Fiction", "bi-book" },
        { "Non-Fiction", "bi-journal-text" },
        { "Science", "bi-atom" },
        { "Technology", "bi-laptop" },
        { "Business", "bi-briefcase" },
        { "Art", "bi-palette" },
        { "History", "bi-hourglass" },
        { "Biography", "bi-person-badge" },
        { "Children", "bi-stars" },
        { "Cooking", "bi-cup-hot" }
    };
}
<link rel="stylesheet" href="~/css/hero.css" />



<section class="hero-section">
    <div class="hero-shapes">
        <div class="shape shape-1"></div>
        <div class="shape shape-2"></div>
        <div class="shape shape-3"></div>
    </div>
    <div class="container position-relative">
        <div class="row align-items-center min-vh-75">
            <div class="col-lg-6 hero-content text-center text-lg-start">
                <div class="animate-fade-up">
                    <div class="hero-badge-wrapper">
                        <span class="hero-badge">
                            <span class="badge-icon"><i class="bi bi-sparkle"></i></span>
                            <span class="badge-text">Welcome to Bulky Books</span>
                        </span>
                    </div>
                    <h1 class="hero-title">
                        Your Gateway to
                        <div class="gradient-text">Endless Stories</div>
                    </h1>
                    <p class="hero-subtitle">
                        Dive into a world of imagination with our curated collection of books.
                        Your next adventure awaits.
                    </p>
                    <div class="hero-actions">
                        <a href="#featured" class="btn btn-glow">
                            <span class="btn-content">
                                <i class="bi bi-book"></i>
                                <span>Explore Books</span>
                            </span>
                        </a>
                        <a href="#categories" class="btn btn-outline">
                            <span class="btn-content">
                                <i class="bi bi-grid"></i>
                                <span>Categories</span>
                            </span>
                        </a>
                    </div>
                    <div class="hero-stats">
                        <div class="stat-card">
                            <div class="stat-icon"><i class="bi bi-book"></i></div>
                            <div class="stat-info">
                                <div class="stat-value">10k+</div>
                                <div class="stat-label">Books</div>
                            </div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-icon"><i class="bi bi-people"></i></div>
                            <div class="stat-info">
                                <div class="stat-value">50k+</div>
                                <div class="stat-label">Readers</div>
                            </div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-icon"><i class="bi bi-star"></i></div>
                            <div class="stat-info">
                                <div class="stat-value">4.8</div>
                                <div class="stat-label">Rating</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block">
                <div class="hero-image-wrapper">
                    <div class="floating-books">
                        <img src="https://icons.iconarchive.com/icons/iconarchive/fairy-tale/128/Hero-Magic-Book-icon.png" width="128" height="128" alt="Featured Books" class="img-fluid floating-animation">
                        <img src="https://icons.iconarchive.com/icons/iconarchive/fairy-tale/128/Hero-Magic-Book-icon.png" width="128" height="128" alt="Featured Books" class="img-fluid floating-animation">
                        <img src="https://icons.iconarchive.com/icons/iconarchive/fairy-tale/128/Hero-Magic-Book-icon.png" width="128" height="128" alt="Featured Books" class="img-fluid floating-animation">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="categories" class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-3">Explore Categories</h2>
            <p class="text-muted">Find your perfect read from our diverse collection of books</p>
        </div>

        <div class="row g-4">
            @foreach (var category in Model.Categories)
            {
                var iconClass = categoryIcons.TryGetValue(category.Name, out var icon) ? icon : "bi-book-half";
                <div class="col-md-6 col-lg-4">
                    <div class="category-card h-100">
                        <div class="category-icon-wrapper mb-4">
                            <i class="bi @iconClass"></i>
                        </div>
                        <h3 class="h4 mb-3">@category.Name</h3>
                        <p class="text-muted mb-4">Discover amazing books in our @category.Name collection</p>
                        <a href="/Customer/Home/Category/@category.Id" class="btn btn-outline-primary">
                            <i class="bi bi-arrow-right me-2"></i>Browse @category.Name
                        </a>
                        <div class="category-card-decoration"></div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section id="features" class="features-section py-5 ">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-truck"></i>
                    </div>
                    <h3 class="h5">Fast Delivery</h3>
                    <p class="text-muted">Get your books delivered right to your doorstep</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-arrow-repeat"></i>
                    </div>
                    <h3 class="h5">Easy Returns</h3>
                    <p class="text-muted">30-day hassle-free return policy</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <h3 class="h5">Secure Shopping</h3>
                    <p class="text-muted">100% secure payment processing</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="newsletter-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="newsletter-card text-center">
                    <h2 class="h3 mb-4">Stay Updated</h2>
                    <p class="text-muted mb-4">Subscribe to our newsletter for the latest books and exclusive offers</p>
                    <form class="newsletter-form">
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="Enter your email">
                            <button class="btn btn-primary" type="submit">Subscribe</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
